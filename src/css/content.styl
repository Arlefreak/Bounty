main
    min-width 260px
    width 80%
    margin auto
    max-width 600px
    .center
        position absolute
        top 50%
        left 50%
        width 80%
        transform translate(-50%,-50%)
    .hunters
        @media screen and (max-width: 600px) 
            text-align center
    .hunter
        width 32%
        margin 10px 0 10px 0
        background $white
        max-width 300px
        box-shadow 2px 2px 2px #aaa
        display inline-block
        vertical-align top
        text-align left
        @media screen and (max-width: 600px) 
            width 48%
        h2
            margin 0 auto 10px auto
            font-size 2.0em
        p
            max-width 510px
            margin auto
            font-weight 100
            font-size 0.9em
            letter-spacing 0.1em
            line-height 1.2em
            hyphens auto
        .content
            display block
            background $gray5
            color $white
            width 100%
            padding 10px
            margin auto
            box-sizing border-box
            position relative
            .position
                height 35px
                width 35px
                border-radius 50%
                position absolute
                top 10px
                right 10px
                border 2px solid $white
                box-sizing border-box
                padding 5px
                text-align center
                font-weight 500
                line-height 1.5em
            .money
                font-size 1.2em
    .winner
        width 100%
        height 30vh
        max-width 600px
        vertical-align top
        text-align right
        .content
        img
            height 100%
            width 49%
            max-width none
            display inline-block
            vertical-align top
            @media screen and (max-width: 600px) 
                width 48%
        .content
            text-align left
            background $color1
            .position
                top 0
                right 0
                height 50px
                width 50px
                font-size 1.5em
            .money
                font-size 2.0em
    .wanted
        display block
        width 100%
        box-sizing border-box
        margin 0 auto 20px auto
        input
            box-shadow 0 1px 2px #aaa
            border 0px
            box-sizing border-box
            padding 10px
            width 100%


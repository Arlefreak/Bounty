main
    min-width 260px
    width 80%
    margin auto
    max-width 600px
    .center
        position absolute
        top 50%
        left 50%
        width 80%
        transform translate(-50%,-50%)
    .hunters
        @media screen and (max-width: 600px) 
            text-align center
    .hunter
        width 32%
        margin 0 auto 10px auto
        background $white
        max-width 300px
        box-shadow 2px 2px 2px #aaa
        display inline-block
        vertical-align top
        text-align left
        @media screen and (max-width: 600px) 
            width 48%
        h2
            margin 0 auto 10px auto
            font-size 1.2em
        p
            max-width 510px
            margin auto
            font-weight 100
            font-size 0.9em
            letter-spacing 0.1em
            line-height 0.8em
            hyphens auto
        img
            display block
            margin 10px auto 10px auto
            width 100%
            height auto
            // @media screen and (max-width: 600px) 
        .content
            display block
            background $gray5
            color $white
            width 100%
            padding 10px
            margin auto
            box-sizing border-box
            position relative
            .position
                height 35px
                width 35px
                border-radius 50%
                position absolute
                top 50%
                right 10px
                transform translate(0%,-50%)
                border 2px solid $white
                box-sizing border-box
                padding 5px
                text-align center
                font-weight 500
                line-height 1.5em
            .money
                font-size 0.8em
    .winner
        width 100%
        height 40vh
        max-width 600px
        vertical-align top
        text-align right
        .content
        img
            height 100%
            width 49%
            max-width none
            display inline-block
            vertical-align top
            @media screen and (max-width: 600px) 
                width 48%
        .content
            text-align left
            background $color1
            h2
                font-size 1.5em
                width 80%
                margin auto auto 5% auto
            .cup
                width 50%
                height auto
                display block
                margin 10px auto 12% auto
            .position
                top 0
                right 0
                height 50px
                width 50px
                font-size 1.5em
            .money
                font-size 1.5em
                width 80% 
                margin auto
    .wanted
        display block
        width 100%
        box-sizing border-box
        margin 5px auto 20px auto
        input
            box-shadow 0 1px 2px #aaa
            border 0px
            box-sizing border-box
            padding 15px
            font-size 1.0em
            width 100%
            transition border 500ms ease
            outline none
            border-bottom 1px solid $white
            &:focus
            &:hover
                border-bottom 1px solid $gray3

    .about
        box-sizing border-box
        padding 20px
        box-shadow 0 1px 2px #aaa
        background $white
        color $gray4
        video
            width 100%
            max-width 400px
            height auto
            margin auto
            display block
        p
            margin 0px auto 15px auto
            font-size 1.0em
            line-height 1.2em
            text-align justify
            span
                color $color1
                font-weight 700
    #map
        height 60vh
        box-shadow 0 1px 2px #aaa

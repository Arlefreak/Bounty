header
    max-width 600px
    width 80%
    margin 20px auto 0 auto
    box-sizing border-box
    overflow hidden
    .flag
        width 50%
        margin auto
    h1
        max-width 1024px
        margin auto
        display inline-block
        text-align left
        font-size 3.0em
        font-weight 700
    img
        width 20%
        min-width 100px
        max-width 150px
        height auto
        display inline-block
    nav
        width 100%
        text-align center
        margin 20px auto 20px auto
        ul
            li
                display inline-block
                a
                    color $color1
                    text-decoration none
                    padding 0px 0px 2px 0px
                    transition border 500ms ease
                    border-bottom 1px solid $color2
                    &.active
                    &:hover
                        border-bottom 1px solid $color1

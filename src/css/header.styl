header
    max-width 600px
    width 80%
    margin 20px auto 20px auto
    box-sizing border-box
    h1
        max-width 1024px
        margin auto
        display inline-block
        text-align left
        font-size 3.0em
        font-weight 700
    img
        width 20%
        min-width 100px
        max-width 150px
        height auto
        display inline-block
    nav
        width 100%
        margin 20px auto 20px auto
        ul
            li
                display inline-block
                a
                    color $color1
                    text-decoration none
